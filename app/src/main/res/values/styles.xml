<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_input_layout">
        <item name="android:layout_marginVertical">4dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

    <style name="budget_input_layout" parent="text_input_layout">
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
<!--        <item name="endIconDrawable">@drawable/ic_money_24</item>-->
<!--        <item name="endIconMode">custom</item>-->
    </style>

    <style name="budget_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/josefin_slab_semibold</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:paddingBottom">@dimen/vseparation_fields</item>
    </style>

    <style name="fragment_title">
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="fragment_subtitle" parent="fragment_title">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="button_submit">
        <item name="android:layout_marginVertical">@dimen/vseparation_small</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:padding">@dimen/vseparation_fields</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="progress_initial_api_request">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:indeterminate">true</item>
        <item name="showAnimationBehavior">inward</item>
        <item name="hideAnimationBehavior">outward</item>
    </style>

    <style name="nodata_banner_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:visibility">gone</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="icon_picker_baseline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="OutLineStyle">
        <item name="color">@color/out_value</item>
        <item name="pointSize">4dp</item>
    </style>

    <style name="InLineStyle">
        <item name="color">@color/in_value</item>
        <item name="pointSize">2dp</item>
    </style>

    <style name="OutInLineLayerStyle">
        <item name="line1Spec">@style/OutLineStyle</item>
        <item name="line2Spec">@style/InLineStyle</item>
    </style>

    <style name="OutInColumnLayerStyle">
        <item name="column1">@style/OutLineStyle</item>
        <item name="column2">@style/InLineStyle</item>
    </style>

    <style name="chart_title">
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="budget_label">
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>